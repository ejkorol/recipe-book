generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Item {
  id            String   @id @default(uuid()) @unique
  name          String
  description   String?
  image         String?

  drops         Drop[]   @relation("ItemDrops")
  ores          Ore[]    @relation("ItemOres")

  @@map("items")
}

model Drop {
  id            String   @id @default(uuid()) @unique
  itemId        String
  item          Item      @relation("ItemDrops", fields: [itemId], references: [id])
  quantity      Int

  @@map("drops")
}

model Ore {
  id              String   @id @default(uuid()) @unique
  hardness        Float
  blastResistance Float
  toolRequired    String
  minableWith     Json

  itemId          String
  item            Item    @relation("ItemOres", fields: [itemId], references: [id])

  @@map("ores")
}
